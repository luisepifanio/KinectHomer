package uk.ac.stir.cs.homer.componentX10.utils.stirlingAdaptor;

import java.util.Observer;

import com.jpeterson.x10.event.AddressEvent;
import com.jpeterson.x10.event.FunctionEvent;

/**
 * X10 event listener.
 *
 * @author	Michael E. Wilson and Kenneth J. Turner
 * @version	Revision 1.0: 19/10/03 (MEW)
 * <br/>	Revision 1.2: 13/05/09 (KJT)
 */

public interface X10Listener {

  /**
   * Description of the Method
   *
   * @param addressEvent  Parameter
   */
  public void notifyX10AddressEvent(AddressEvent addressEvent);

  /**
   * Description of the Method
   *
   * @param functionEvent  Parameter
   */
  public void notifyX10FunctionEvent(FunctionEvent functionEvent);

  public void addObserver(Observer o);
	
}

